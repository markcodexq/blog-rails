<h1><%= @article.title %></h1>
<p><%= @article.text %></p>

<%= form_for ([@article, @article.comments.build]), data: { turbo: false }  do |f| %>
  <%= f.hidden_field :author, value:current_user.user_name %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.submit %>
<% end %>
<hr>
