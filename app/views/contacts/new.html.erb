<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path, data: { turbo: false } do |f| %>
  <% if @contact && @contact.errors.any? %>
  <% @contact.errors.full_messages.each do |msg| %>
        <ul>
          <li><%= msg %></li>
        </ul>
    <% end %>
  <% end %>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>
  <%= f.label :message %><br>
  <%= f.text_area :message %><br>
  <%= f.submit "Send Message" %>
<% end %>